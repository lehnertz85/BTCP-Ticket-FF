{
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": "btcp_icon_48.png"
  },
  "description": "This extension displays the current btcp price on the badge icon.",
  "icons": {
    "16": "btcp_icon_16.png",
    "48": "btcp_icon_48.png",
    "128": "btcp_icon_128.png"
  },
  "manifest_version": 2,
  "name": "BTCP Ticker",
  "options_ui": {
    "page": "options.html"
  },
  "homepage_url": "https://github.com/lehnertz85/btcp-ticker-firefox",
  "permissions": [
    "storage",
    "https://api.coinmarketcap.com/v1/ticker/bitcoin-private/",
    "https://api.coinmarketcap.com/v1/ticker/bitcoin-private/?convert=EUR",
    "https://api.coinmarketcap.com/v1/ticker/bitcoin-private/?convert=CAD",
    "https://nanex.co/api/public/ticker/btcpnano",
    "https://tradesatoshi.com/api/public/getticker?market=BTCP_LTC"],
  "version": "1.0.3",
  "short_name": "BTCP Ticker"
}
